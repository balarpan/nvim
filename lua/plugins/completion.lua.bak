return {
  'hrsh7th/nvim-cmp',
  event = { 'InsertEnter', 'CmdlineEnter' }, -- Lazy loads when entering insert or command mode
  dependencies = {
    -- List all your cmp sources as dependencies
    'hrsh7th/cmp-buffer',
    'hrsh7th/cmp-path',
    'hrsh7th/cmp-nvim-lsp',
    'hrsh7th/cmp-cmdline',
    -- Other sources like luasnip, etc.
    'L3MON4D3/LuaSnip',
  },
  config = function()
    -- Your existing nvim-cmp setup configuration goes here
    local cmp = require('cmp')
    cmp.setup({
      -- ... your configuration ...
      mapping = cmp.mapping.preset.insert({
        -- ... your mappings ...
      }),
      sources = cmp.config.sources({
        { name = 'nvim_lsp' },
        { name = 'buffer' },
        { name = 'path' },
      }),
      -- ... other settings
    })

    -- Setup for the command line
    cmp.setup.cmdline({ '/', '?' }, {
      mapping = cmp.mapping.preset.cmdline(),
      sources = {
        { name = 'buffer' }
      }
    })
    cmp.setup.cmdline(':', {
      mapping = cmp.mapping.preset.cmdline(),
      sources = cmp.config.sources({
        { name = 'cmdline' },
        { name = 'path' }
      })
    })
  end
}

